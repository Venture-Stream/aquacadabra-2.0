                      class="
                        text-base text-black flex items-center
                        {% if link.links != blank -%}
                          font-semibold pb-8
                        {%- else -%}
                          font-semibold pb-4
                        {%- endif -%}
                      "
                      href="{{ link.url }}"
                    >
                      {{- link.title | escape -}}
                    </a>
                    {% if link.links != blank %}
                      {% for sublink in link.links %}
                        <a class="pb-4 text-base font-light text-black" href="{{ sublink.url }}">
                          {{- sublink.title | escape -}}
                        </a>
                      {% endfor %}
                    {% endif %}
                  </div>
                {%- endfor -%}
              {%- endif -%}
            {%- else -%}
              {% if block.settings.col_1_link != blank %}
                <a href="{{ block.settings.col_1_link }}">
              {% else %}
                <div>
              {% endif %}
              <img
                src="{{ block.settings.col_1_img | image_url: width: 500 }}"
                alt="{{ block.settings.col_1_img.alt }}"
                width="auto"
                height="auto"
                loading="lazy"
              >
              <div class="my-4 font-medium text-center">
                {{ block.settings.col_1_img_text }}
