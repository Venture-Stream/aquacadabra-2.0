<div class="{{ class }} product__accordion accordion quick-add-hidden" {{ block.shopify_attributes }}>
  <details id="Details-{{ block.id }}-{{ section.id }}">
    <summary>
      <div class="summary__title">
        {% render 'icon-accordion', icon: block.settings.icon %}
        <h2 class="h4 accordion__title inline-richtext">
          {{ block.settings.heading | default: block.settings.page.title | escape }}
        </h2>
      </div>
      {% render 'icon-arrow-black', class: 'roate-180' %}
    </summary>
    <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
      {% if block.settings.use_description %}
        {{ product.description }}
      {% endif %}
      {% if block.settings.show_reviews %}
        <div id="feefo-product-review-widgetId" class="feefo-review-widget-product" data-product-sku="{{ product.selected_or_first_available_variant.sku }}"></div>
      {% endif %}
        {{ block.settings.content }}
        {{ block.settings.page.content }}
    </div>
  </details>
</div>