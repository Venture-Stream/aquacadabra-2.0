{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="h-full section-{{ section.id }}-padding">
  <div class="bg-[#FAFAFA]">
    <div class="md:h-[530px] md:-mb-24 flex flex-col items-center justify-center text-center" style="background: url({{ section.settings.banner_image | image_url: height: 530 }}) center / cover no-repeat;">
      <div class="page-width rte text-white md:-mt-48 pt-6 pb-24 md:py-0">
        <div>
          <h2 class="text-white uppercase rte md:text-3.8 text-2.8">{{ section.settings.banner_title }}</h2>
          <div class="xl:max-w-[65%] xl:px-36 mx-auto leading-relaxed">{{ section.settings.banner_content }}</div>
        </div>
      </div>
    </div>
    <div class="page-width offscreen-right">
      <div class="relative bottom-12">
        <div class="lg:grid lg:grid-cols-4 flex gap-8 flex-nowrap lg:overflow-x-hidden overflow-x-scroll lg:pr-0 md:pr-20 pr-6">
          {% for block in section.blocks %}
            <div class="max-w-[260px] md:max-w-[380px] flex-shrink-0">
              <a class="full-unstyled-link group relative bg-white text-[#333333] md:p-4" href="{{ block.settings.link }}">
                <div class="md:h-[380px] h-[260px] overflow-hidden">
                  <img
                  src="{{ block.settings.link_image | image_url: height: 380 }}"
                  alt="{{ block.settings.link_title | escape }}"
                  width="{{ block.settings.link_image.width }}"
                  height="{{ block.settings.link_image.height }}"
                  loading="lazy"
                  class="object-cover w-full h-full group-hover:scale-105 transition-all duration-500"
                  >
                </div>
                <div class="py-10 px-6 rte">
                  <p class="text-1.8 font-bold">{{ block.settings.link_title }}</p>
                  <div>
                    {{ block.settings.link_content }}
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Content",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner image"
    },
    {
      "type": "richtext",
      "id": "banner_title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "banner_content",
      "label": "Content"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Link Block",
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": "Block Link"
        },
        {
          "type": "image_picker",
          "id": "link_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "link_title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "link_content",
          "label": "Content"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Featured Content"
    }
  ]
}
{% endschema %}