<div class="page-width">
  <div class="heading--wrapper">
    {% if template == blog %}
      <h1 class="section-heading h2 scroll-trigger animate--fade-in">
        {{ blog.title | escape }}
      </h1>
    {% else %}
      <h2 class="section-heading h2 scroll-trigger animate--fade-in">
        <a href="{{ blog.url }}">
          {{ blog.title | escape }}
        </a>
      </h2>
    {% endif %}

  </div>

  {% render 'blog-categories' %}
</div>

{% schema %}
{
  "name": "Blog header",
  "settings": [],
  "presets": [
    {
      "category": "Blog",
      "name": "Blog header",
      "settings": {}
    }
  ]
}
{% endschema %}